{
  "manifest_version": 3,
  "name": "Crypto Price Ticker",
  "version": "1.0",
  "description": "快速查询加密货币 USDT 价格",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "https://api.binance.com/*"
  ]
}